{
    "compilerOptions": {
        "lib": ["dom", "es2015"],
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "strict": true,
        "strictFunctionTypes": false,
        "types": ["node", "jest"],
        "sourceMap": true,
        "allowJs": true,
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "noUnusedLocals": true,
        "baseUrl": ".",
        "skipLibCheck": true
    },
    "exclude": ["example", "node_modules"],
    "compileOnSave": false
}
